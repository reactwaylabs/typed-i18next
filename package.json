{
    "name": "typed-i18next",
    "version": "0.1.0",
    "description": "Generating TypeScript types from translations.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc -p .",
        "watch": "tsc -p . -w",
        "start": "node dist/cli/main.js",
        "pretest": "tsc -p . --noEmit && eslint \"src/**/*.ts*\" -f visualstudio",
        "test": "npm run build-tests && jest",
        "build-tests": "test-generator-cli"
    },
    "author": "ReactWay <dev@reactway.com> (https://github.com/reactway)",
    "license": "MIT",
    "files": [
        "dist",
        "docs",
        "*.js",
        "*.d.ts",
        "!*.config.js",
        "!dist/_debug*"
    ],
    "devDependencies": {
        "@reactway/eslint-config": "^1.0.0-alpha",
        "@simplrjs/test-generator-cli": "^0.1.3",
        "@types/jest": "^24.0.18",
        "eslint": "^6.1.0",
        "jest": "^24.9.0",
        "jest-junit": "^8.0.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.3"
    },
    "dependencies": {
        "@types/fs-extra": "^8.0.0",
        "@types/glob": "^7.1.1",
        "@types/lodash.debounce": "^4.0.6",
        "@types/lodash.get": "^4.4.6",
        "@types/lodash.set": "^4.3.6",
        "chalk": "^2.4.2",
        "commander": "^2.20.0",
        "fs-extra": "^8.1.0",
        "globs": "^0.1.4",
        "lodash.debounce": "^4.0.8",
        "lodash.get": "^4.4.2",
        "lodash.set": "^4.3.2",
        "loglevel": "^1.6.3",
        "loglevel-plugin-prefix": "^0.8.4",
        "pascal-case": "^2.0.1",
        "ts-morph": "^3.1.3",
        "upath": "^1.1.2"
    },
    "jest": {
        "verbose": true,
        "preset": "ts-jest",
        "reporters": [
            "default",
            "jest-junit"
        ],
        "collectCoverage": true,
        "testRegex": "/__tests__/.*\\.(test|spec).(ts|tsx)$",
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/__tests__/*",
            "!src/index.ts",
            "!src/cli/**/*"
        ],
        "coverageReporters": [
            "cobertura",
            "html"
        ],
        "moduleNameMapper": {
            "@src/(.*)": "<rootDir>/src/$1"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "./tests/tsconfig.json"
            }
        }
    }
}
